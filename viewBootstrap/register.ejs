              if(res==1) {
                if (checkP) {
                  $('#submit').prop('disabled', false);
                }
                $('#msUser').text("Tên hợp lệ");
                checkU= true;
              }
            });
          });
          $('#confirm').focusout(function() {
            let p1= $('#pass').val();
            let p2= $('#confirm').val();
            if (p1==p2){
              if (checkU) {
                $('#submit').prop('disabled', false);
              }
              $('#msPass').text("Mật khẩu trùng!");
              checkP=true;
            }else{
              $('#submit').prop('disabled', true);
              $('#msPass').text("Mật khẩu không trùng!");
              checkP= false;
            }
          });
        });
    </script>

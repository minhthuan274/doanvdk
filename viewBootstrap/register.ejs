    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <script>
        $(function() {
          var checkU= true;
          var checkP= true;
          $('#user').focusout(function() {
            var user= $('#user').val();
            $.get("./check/"+user, function(res) {
              console.log(res);
              if(res==0) {
                $('#button').prop('disabled', true);
                $('#msUser').text("Tên không hợp lệ");
                checkU= false;
              }
              if(res==1) {
                if (checkP) {
                  $('#button').prop('disabled', false);
                }
                $('#msUser').text("Tên hợp lệ");
                checkU= true;
              }
            });
          });
          $('#confirm').focusout(function() {
            let p1= $('#pass').val();
            let p2= $('#confirm').val();
            if (p1==p2){
              if (checkU) {
                $('#button').prop('disabled', false);
              }
              $('#msPass').text("Mật khẩu trùng!");
              checkP=true;
            }else{
              $('#button').prop('disabled', true);
              $('#msPass').text("Mật khẩu không trùng!");
              checkP= false;
            }
          });
        });

        $(function() {
          var checkU= true;
          var checkP= true;
          $('#user').focusout(function() {
            var user= $('#user').val();
            $.get("./check/"+user, function(res) {

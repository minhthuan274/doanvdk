    <title>Signup - VDK</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="css/mycss.css">
    <link rel="stylesheet" href="css/register.css">
    <!-- Bootstrap CSS -->
